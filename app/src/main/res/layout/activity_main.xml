<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.custom.findcabine.MainActivity">


    <TextView
        android:cabinId="@+cabinId/mainActivity_number"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Enter the number to find cabin"
        android:textSize="20dip"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="7dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ecec69"
        android:onClick="showNumbers"
        android:orientation="vertical">


        <TextView
            android:cabinId="@+cabinId/mainActivity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:cabinId="@+cabinId/mainActivity_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:cabinId="@+cabinId/mainActivity_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:cabinId="@+cabinId/mainActivity_fragmentNumbersContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:cabinId="@+cabinId/mainActivity_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraBearing="112.5"
            map:cameraTargetLat="29.9932"
            map:cameraTargetLng="31.1309"
            map:cameraTilt="30"
            map:cameraZoom="13"
            map:mapType="normal"
            map:uiCompass="true"
            map:uiRotateGestures="true"
            map:uiScrollGestures="true"
            map:uiTiltGestures="true"
            map:uiZoomControls="false"
            map:uiZoomGestures="true"
            tools:context="com.custom.findcabine.MainActivity" />


        <android.support.constraint.ConstraintLayout
            android:cabinId="@+cabinId/mainActivity_numbersContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#53534f"
            android:visibility="gone">


            <Button
                android:cabinId="@+cabinId/button8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+cabinId/button7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="160dp"
                android:onClick="onNumberClicked"
                android:text="3" />

            <Button
                android:cabinId="@+cabinId/button6"
                app:layout_constraintEnd_toStartOf="@+cabinId/button3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+cabinId/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="16dp"
                android:onClick="onNumberClicked"
                android:text="7" />

            <Button
                android:cabinId="@+cabinId/button7"

                app:layout_constraintBaseline_toBaselineOf="@+cabinId/button8"
                app:layout_constraintEnd_toStartOf="@+cabinId/button8"
                app:layout_constraintStart_toEndOf="@+cabinId/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onNumberClicked"
                android:text="2" />

            <Button
                android:cabinId="@+cabinId/button4"

                app:layout_constraintEnd_toStartOf="@+cabinId/button5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+cabinId/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="16dp"
                android:onClick="onNumberClicked"
                android:text="4" />

            <Button
                android:cabinId="@+cabinId/button5"
                app:layout_constraintEnd_toStartOf="@+cabinId/button9"
                app:layout_constraintStart_toEndOf="@+cabinId/button4"
                app:layout_constraintTop_toBottomOf="@+cabinId/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="onNumberClicked"
                android:text="5" />

            <Button
                android:cabinId="@+cabinId/button2"
                app:layout_constraintEnd_toStartOf="@+cabinId/button7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="160dp"
                android:onClick="onNumberClicked"
                android:text="1" />

            <Button
                android:cabinId="@+cabinId/button3"
                app:layout_constraintEnd_toStartOf="@+cabinId/button10"
                app:layout_constraintStart_toEndOf="@+cabinId/button6"
                app:layout_constraintTop_toBottomOf="@+cabinId/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="onNumberClicked"
                android:text="8" />

            <Button
                android:cabinId="@+cabinId/button9"
                app:layout_constraintBaseline_toBaselineOf="@+cabinId/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+cabinId/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:onClick="onNumberClicked"
                android:text="6" />

            <Button
                android:cabinId="@+cabinId/button10"
                app:layout_constraintBottom_toTopOf="@+cabinId/mainActivity_clear"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="40dp"
                android:onClick="onNumberClicked"
                android:text="9" />

            <Button
                android:cabinId="@+cabinId/button11"
                app:layout_constraintStart_toStartOf="@+cabinId/button3"
                app:layout_constraintTop_toBottomOf="@+cabinId/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="onNumberClicked"
                android:text="0" />

            <Button
                android:cabinId="@+cabinId/mainActivity_clear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+cabinId/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:onClick="onClearClick"
                android:text="\u00D7"
                android:textSize="20dip" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

</LinearLayout>
